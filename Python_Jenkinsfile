pipeline {
    agent {
		label '201-agent'
	}
    
    stages {              
        stage('Run All Selenium Tests') {
            steps {
                sh '''
		bash -c "
			python3 -m venv myenv
                	source venv/bin/activate
                	pip install -r requirements.txt
                	pytest tests/ --browser=chrome
		"
                '''
            }
        }
    }
}
